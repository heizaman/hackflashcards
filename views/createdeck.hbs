{{> header}}


<div class="columns">

  <div class="column">
    <section class="section">
      <div class="container is-fluid">

        <p class="title">
          Create Deck
        </p>

        <div class="field">
          <label class="label">Deck Name</label>
          <div class="control">
            <input class="input" type="text" placeholder="My Deck" onchange="nameChanged()" id="deck-name-form">
          </div>
        </div>

        <div class="field">
          <label class="label">Front</label>
          <div class="control">
            <label class="checkbox">
              <input type="checkbox" id="front-heading-check" onchange="checkboxChanged()">
              Heading
            </label>
            <br>
            <label class="checkbox">
              <input type="checkbox" id="front-subheading-check" onchange="checkboxChanged()">
              Sub-heading
            </label>
            <br>
            <label class="checkbox">
              <input type="checkbox" id="front-para-check" onchange="checkboxChanged()">
              Paragraph
            </label>
            <br>
            <label class="checkbox">
              <input type="checkbox" id="front-img-check" onchange="checkboxChanged()">
              Image
            </label>
          </div>
        </div>

        <div class="field">
          <label class="label">Back</label>
          <div class="control">
            <label class="checkbox">
              <input type="checkbox" id="back-heading-check" onchange="checkboxChanged()">
              Heading
            </label>
            <br>
            <label class="checkbox">
              <input type="checkbox" id="back-subheading-check" onchange="checkboxChanged()">
              Sub-heading
            </label>
            <br>
            <label class="checkbox">
              <input type="checkbox" id="back-para-check" onchange="checkboxChanged()">
              Paragraph
            </label>
            <br>
            <label class="checkbox">
              <input type="checkbox" id="back-img-check" onchange="checkboxChanged()">
              Image
            </label>
          </div>
        </div>

        <div class="field">
          <label class="label">Learn By</label>
          <div class="control">
            <input type="date" id="deck-date" name="Date">
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link" onclick="submitCreateDeck()">Create Deck</button>
          </div>
          {{!-- <div class="control">
            <button class="button is-link is-light">Cancel</button>
          </div> --}}
        </div>

      </div>
    </section>
  </div>

  <div class="column">
    <section class="section">
      <div class="container is-fluid">
        <p class="title">
          Format of the flashcards in the deck
        </p>

        <p class="title is-4" id="deck-name">
          Deck Name
        </p>

        <p class="subtitle my-3">
          Front
        </p>
        <div class="card">
          <div class="card-content">
            <p class="title is-4 d-none" id="front-heading">
              Heading
            </p>
            <p class="subtitle d-none" id="front-subheading">
              Subheading
            </p>
            <p id="front-para" class="d-none">
              This is a sample paragraph which shows us how a paragraph will appear on the flashcards of this deck.
            </p>
            <figure class="image is-128x128 my-4" style="display: none" id="front-img">
              <img src="https://bulma.io/images/placeholders/128x128.png">
            </figure>
            <p class="subtitle" id="front-sample">
              Sample of the Front of the Flashcard
            </p>
          </div>
        </div>

        <p class="subtitle mt-6 my-3">
          Back
        </p>
        <div class="card">
          <div class="card-content">
            <p class="title is-4 d-none" id="back-heading">
              Heading
            </p>
            <p class="subtitle d-none" id="back-subheading">
              subheading
            </p>
            <p id="back-para" class="d-none">
              This is a sample paragraph which shows us how a paragraph will appear on the flashcards of this deck.
            </p>
            <figure class="image is-128x128 my-4" id="back-img" style="display: none">
              <img src="https://bulma.io/images/placeholders/128x128.png">
            </figure>
            <p class="subtitle" id="back-sample">
              Sample of the Back of the Flashcard
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>


<script src="/javascripts/createDeck.js"></script>